<h1>Portfolio Show</h1>

<p><%= @portfolio_item.title %></p>
<p><%= @portfolio_item.subtitle %></p>
<p><%= @portfolio_item.body %></p>

<h2>Technologies Used</h2>
<% @portfolio_item.technologies.each do |t| %>
  <p><%= t.name %></p>
<% end %>

<p><%= image_tag @portfolio_item.main_image unless @portfolio_item.main_image.nil? %></p>



<%= link_to 'Back', portfolios_path %>
<%= link_to 'Edit', edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %>
<%= link_to 'Delete', portfolio_path(@portfolio_item), method: :delete, data: {confirm: 'Are you sure?'} if logged_in?(:site_admin) %>

<hr>

<% params.inspect %>
<hr>

<% session.inspect %>
