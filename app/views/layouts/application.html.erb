<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale = 1.0,maximum-scale = 1.0" />
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta name = "keywords" content="<%= @seo_keywords %>" />

    <%= favicon_link_tag 'favicons/favicon.ico' %>
   <link href="https://fonts.googleapis.com/css?family=Rubik+Mono+One|Ubuntu" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

      


  <body>
    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          <%= video_tag(
              'Lonely-Chair.mp4',
              id: 'background',
              autoplay: true,
              loop: true,
              muted: true,
              poster: 'Lonely-Chair.jpg'
            )
            %> 
          
          <%= render "shared/application_nav" %>
          
          <%= yield %>

          <%= render "shared/application_footer" %>

          <%= alerts %>

          <%= source_helper("application") %>

        </div>
      </div>
    </div>
  </body>
</html>
