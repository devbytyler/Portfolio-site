<div class="blog-post">
  <h2 class="blog-post-title"><%=link_to blog.title.upcase, blog %></h2>
  <p class="blog-post-meta">Created <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>
  

  <% if logged_in?(:site_admin) %>
    <p class="blog-post-meta">
      <%= link_to action_icon_helper(blog.status), toggle_status_blog_path(blog) %> /
      <%= link_to action_icon_helper("edit"), edit_blog_path(blog) %> /
      <%= link_to action_icon_helper("delete"), blog, method: :delete, data: { confirm: 'Are you sure?' }%>
    </p>
  <%end%>
 
  <p>
    <%= markdown blog.body %>
  </p>
</div>


